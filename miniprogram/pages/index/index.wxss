/**index.wxss**/

page {
  padding-top: 54rpx;
  background-image: url("https://636c-cloud1-8ghautw7cbf2383e-1324617939.tcb.qcloud.la/Picture/1.jpg?sign=882c68d96c24a81ff26aae25de28a46d&t=1709980721");
  background-repeat: no-repeat;
  background-size: cover;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.power {
  margin-top: 30rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
  padding-bottom: 1rpx;
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
  display: flex;
  align-items: center;
}

.power_info_text_tag {
  margin-left: 20rpx;
  background-color: #fbe0e0;
  color: #e54545;
  padding: 0 7px;
  font-size: 14px;
  vertical-align: middle;
  border-radius: 3px;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
}

.power_item_title {
  font-size: 30rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}

.custom-button {  
  background-color: #d6ffd8; /* 背景色 */  
  color: #000000; /* 文字颜色 */  
  border-radius: 20rpx; /* 边框圆角 */  
  padding: 25rpx 40rpx; /* 内边距 */  
  font-size: 20px; /* 字体大小 */ 
  transition: background-color 0.3s ease; /* 添加过渡效果 */ 
}
.custom-button.pressed {  
  background-color: #a7caa8; /* 被按下时的背景色，比初始色深 */  
}
.image-container {  
  border: 1px solid #000000; /* 设置边框为1像素宽，黑色，实线 */  
  border-radius: 5px; /* 可选：设置边框圆角 */  
  padding: 10px; /* 可选：设置内边距 */  
  width: 100%; /* 可选：设置容器宽度 */  
  height: auto; /* 可选：设置容器高度为自动，以保持图片比例 */  
  overflow: hidden; /* 可选：隐藏超出容器的图片部分 */  
}

/* 定义类似超链接的按钮样式 */  
.hyperlink-button { 
  position: relative; 
  background-color: white;  
  border: 1rpx solid #cccccc;  
  width: 752rpx; 
  height: 96rpx;
  line-height: 42px;  
  font-size: 18px; /* 根据需要调整字体大小 */  
  font-family: 'Noto Sans CJK', sans-serif; /* 选择一个合适的字体家族 */    
  /* 设置文本对齐方式为左对齐 */  
  text-align: left;
  /* 设置字体不加粗 */  
  font-weight: normal;
  padding-left: 65rpx; /* 增加左内边距 */     
}  
.button-icon {  
  position: absolute; /* 绝对定位图标 */  
  left: 10rpx; /* 根据需要调整图标的位置 */  
  top: 50%; /* 垂直居中图标 */  
  transform: translateY(-50%); /* 垂直居中图标 */  
  width: 50rpx; /* 设置图标大小 */  
  height: 50rpx; /* 设置图标大小 */  
}
.circle-avatar {  
  /* 设置宽高相等以创建正方形容器 */  
  width: 50px;  
  height: 50px;  
  overflow: hidden;  
  /* 设置边框半径为50%以创建圆形 */  
  border-radius: 70%;  
  /* 可选：设置背景颜色以防图像未加载或透明 */  
  background-color: #eee;  
} 

.big-avatar {  
  /* 设置宽高相等以创建正方形容器 */  
  width: 80px;  
  height: 80px;  
  overflow: hidden;  
  /* 设置边框半径为50%以创建圆形 */  
  border-radius: 70%;  
  /* 可选：设置背景颜色以防图像未加载或透明 */  
  background-color: #eee;  
} 

.container {  
  padding-bottom: 50px; /* 为自定义tabbar预留空间 */  
}  
  
.fixed-tabbar {  
  position: fixed;  
  bottom: 0;  
  width: 100%;  
  display: flex;  
  justify-content: space-around;  
  align-items: center; /* 垂直居中图标和文字 */  
  background-color: #fff;  
  border-top: 1px solid #eee;  
  padding: 5px 0; /* 根据需要调整内边距 */  
}  
  
.tab-item {  
  display: flex;  
  flex-direction: column;  
  align-items: center; /* 垂直居中图标和文字 */  
  text-align: center;  
}  
  
.tab-icon {  
  width: 30px; /* 图标宽度 */  
  height: 30px; /* 图标高度 */  
  margin-bottom: 5px; /* 图标与文字之间的间距 */  
}  
  
.tab-text {  
  font-size: 14px; /* 文字大小 */  
}  
  
.tab-item.active .tab-icon,  
.tab-item.active .tab-text {  
  color: rgb(18, 194, 141); /* 选中状态的图标和文字颜色 */  
}

.animal-list {  
  display: flex;  
  flex-wrap: wrap;  
  justify-content: space-around;  
}  
  
.animal-item {  
  width: calc(33.33% - 40rpx); /* 每行三个动物项，减去一些间距 */  
  margin: 10rpx;  
  padding: 10rpx;  
  background-color: #fff;  
  border-radius: 10rpx;  
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  justify-content: center;  
}  
  
.animal-image {  
  width: 100%;  
  height: 150rpx; /* 或根据实际需要设置 */  
}  
  
.animal-name {  
  text-align: center;  
  margin-top: 10rpx;  
}